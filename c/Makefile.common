UNITTEST_PP_DIR     = ../UnitTest++
SOURCE_FOLDERS      = src
INCLUDE_FOLDERS     = include
TEST_SOURCE_FOLDERS = test

# 
# Version/Product information
#
MAJOR_VERSION           = 0
MINOR_VERSION           = 3
BUILD_VERSION           = 4
PRODUCT_NAME            = mango

# 
# Build directory
#
ifeq ($(OUTPUT_DIR),)
    OUTPUT_DIR          = bld
endif

# 
# Default build mode
#
ifeq ($(BUILD_MODE),)
    BUILD_MODE          = debug
endif

###############  DO NOT MODIFY BELOW THIS   ##############

VERSION                 = $(MAJOR_VERSION).$(MINOR_VERSION).$(BUILD_VERSION)

OUTPUT_DIR              := $(OUTPUT_DIR)/$(BUILD_MODE)

DEBUG_CFLAGS            =   -g -fno-inline
PROFILE_CFLAGS          =   -g -fno-inline -pg
RELEASE_CFLAGS          =   -O3
CORE_CFLAGS             =   -Wall                   \
                            -I../src

ifeq ($(BUILD_MODE), debug)
    CFLAGS              =   $(CORE_CFLAGS) $(DEBUG_CFLAGS)              \
                            -DMANGO_VERSION_MAJOR=$(MAJOR_VERSION)      \
                            -DMANGO_VERSION_MINOR=$(MINOR_VERSION)      \
                            -DMANGO_VERSION_REVISION=$(BUILD_VERSION)
else
    CFLAGS              =   $(CORE_CFLAGS) $(RELEASE_CFLAGS)            \
                            -DMANGO_VERSION_MAJOR=$(MAJOR_VERSION)      \
                            -DMANGO_VERSION_MINOR=$(MINOR_VERSION)      \
                            -DMANGO_VERSION_REVISION=$(BUILD_VERSION)
endif

ifeq ($(ENABLE_MEMCHECK), yes)
     CFLAGS += -DUSING_VALGRIND
endif

####    Installation Directories    ####
LIB_INSTALL_DIR         = /usr/local/lib
INCLUDE_INSTALL_DIR     = /usr/local/include

# 
# Select compiler
#
GCC                     = gcc
GPP                     = g++

###################     Begin Targets       ######################

# Implicit rule to build .o into the build directory from .cpp
$(OUTPUT_DIR)/%.o : %.c
	@echo Building $@
	$(GCC) -c $(CFLAGS) $< -o $@

